<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Ajax Log In</title>
    <link href="/Content/bootstrap.css" rel="stylesheet"/>
    <link href="/Content/bootstrap-responsive.css" rel="stylesheet"/>
    <link href="/Content/site.css" rel="stylesheet"/></head>
<body>

    <div class="container">

        <header>
            <div class="pull-right">
                <div data-bind="hidden: !User.IsAuthenticated()" class="hidden">
                    <span data-bind="text: User.Email"></span>
                    <a href="#" data-bind="click: LogOut">Log out</a>
                </div>
                <div data-bind="hidden: User.IsAuthenticated" class="hidden">
                    <form id="LogIn" data-bind="with: LogInDetails" class="form-inline">
                        <span class="control-group">
                            <input id="LogInEmail" name="Email" data-bind="value: Email" type="text" />
                            <input id="LogInPassword" name="Password" data-bind="value: Password" type="password" />
                        </span>
                        <input data-bind="checked: RememberMe" name="RememberMe" title="Remember me?" type="checkbox" />
                        <input type="submit" value="Log in" class="btn"/>
                    </form>
                </div>
            </div>
        </header>

        <h1>Ajax Log In - Example Application</h1>
        <h2>by <a href="http://thatismatt.github.com">thatismatt</a></h2>

        @RenderBody()

    </div>

    <script src="@Url.Content("~/Scripts/modernizr.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.regex.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/knockout.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/knockout.hidden.js")" type="text/javascript"></script>
    <script src="@Url.Action("Index", "StaticJs")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ajaxlogin.xhr.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ajaxlogin.models.js")" type="text/javascript"></script>
    
    @RenderSection("scripts", required: false)
</body>
</html>
